settings ={}
    Xpresion = "Xpresion::"
    RegExp = "RegExp::"
@

plugins =[{}]
    "minify" = "!plg:minify"
    "doc" = "!plg:doc"
@

tasks =[{}]

    build =[{}]

        src =[]
            ### modelview.js, main framework ###
            ./src/header.js
            ./src/utils.js
            ./src/pb.js
            ./src/types.js
            ./src/model.js
            ./src/view.js
            ./src/footer.js
        @

        # extract header from this file
        header = ./src/header.js

        replace =[{}]
            "@@VERSION@@" = "5.0.0"
            "@@DATE@@" = Xpresion::date("Y-m-d H:i:s")
        @

        # Extract documentation from the source (map)
        doc ={}

            "startdoc" = "/**[DOC_MARKDOWN]"
            "enddoc" = "[/DOC_MARKDOWN]**/"
            "trim" = RegExp::^\\s*\\*[ ]?
            "output" = "./manual.md"

        @

        out = ./build/modelview.js
    @

